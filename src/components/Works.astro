---
import BlackH2 from "./BlackH2.astro";
import BlackH2S from "./BlackH2S.astro";
import RedP from "./RedP.astro";
import RedPS from "./RedPS.astro";
import BlackP from "./BlackP.astro";
import ArrowIcon from "./ArrowIcon.astro";
import RedButton from "./RedButton.astro";
import img01 from "../assets/img/gallery/01.jpg";
import img02 from "../assets/img/gallery/02.jpg";
import img03 from "../assets/img/gallery/03.jpg";
import img04 from "../assets/img/gallery/04.jpg";
import img05 from "../assets/img/gallery/05.jpg";
import img06 from "../assets/img/gallery/06.jpg";
---

<section class="works">
  <div class="works__container _container">
    <div class="works__body">
      <div class="mt-[50px] min-[500px]:mt-[100px] flex justify-center">
        <RedP>Посмотрите и оцените</RedP>
      </div>
      <div class="mt-[5px] min-[500px]:mt-[10px] flex justify-center">
        <BlackH2>Наши работы</BlackH2>
      </div>
      <div class="flex mt-[35px] min-[500px]:mt-[70px]">
        <div
          class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700"
        >
          <a href="#">
            <img
              class="rounded-t-lg"
              src={img01}
              alt=""
            />
          </a>
          <div class="p-5">
            <a href="#">
              <BlackH2S>БАРЮБЕКЮ. МАНГАЛ, ТАНДЫР, ВАРОЧНАЯ ПЛИТА</BlackH2S>
            </a>
            <div class="mt-2">
              <BlackP>
                Комплексная летняя кухня для отеля "", Московская область
              </BlackP>
            </div>
            <div class="mt-3">
              <RedButton>
                <div class="flex items-center gap-x-1">
                  <p>Узнать подробнее</p>
                  <svg
                    class="fill-white mt-[3px]"
                    xmlns="http://www.w3.org/2000/svg"
                    height="1em"
                    viewBox="0 0 448 512"
                    ><!--! Font Awesome Free 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                    <path
                      d="M438.6 278.6c12.5-12.5 12.5-32.8 0-45.3l-160-160c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L338.8 224 32 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l306.7 0L233.4 393.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0l160-160z"
                    ></path></svg
                  >
                </div>
              </RedButton>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
